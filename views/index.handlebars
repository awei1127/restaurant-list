<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" value="{{keyword}}" class="form-control" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div class="d-flex flex-column">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-2">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
          </a>
          <ul>
            <li class="d-flex justify-content-end mb-3">
              <a class="mx-1" href="/restaurant/{{ this._id }}/edit">Edit</a>
              <a class="mx-1" href="/todos/{{ this._id }}">Detail</a>
              <form class="mx-1" action="/restaurant/{{ this._id }}/delete" method="POST" style="display: inline;">
                <button type="submit">Delete</button>
              </form>
            </li>
          </ul>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<!-- add restaurant button-->
<div class="position-relative">
  <div class="position-fixed bottom-0 end-0">
    <a href="/restaurant/new">
      <button type="button" class="btn btn-major m-5 p-5 rounded-circle">
        <i class="fas fa-plus fa-2xl"></i>
      </button>
    </a>
  </div>
</div>